---
layout: layouts/base.njk
---
<div class="flex justify-center items-center mb-4">
  <div class="mx-auto px-5 max-w-xl">
    <p class="text-gray-400 mb-5">#render markdown</p>
    <div class="mb-5">{{ content | safe }}</div>
    <p class="text-gray-400 mb-5">#render form</p>

    {% set fields = demo.form %}

    <form action="{{ demo.action }}">

      {% for field in fields %}
        {% if field.enum %}
          {% Group field.id, field.label  %}
            {% SelectField field.id, field.id, true, field.enum %}
          {% endGroup %}
        {% else %}
          {% Group field.id, field.label  %}
            <input {% Text field.id , field.id , field.label , true %}>
          {% endGroup %}
        {% endif %}
      {% endfor %}

      <button {% Button demo.action %}>
        Click Me!
      </button>
    </form>
  </div>
</div>